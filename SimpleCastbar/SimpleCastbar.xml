<GuiXml>
	<Controls>	
		
		<TopLevelControl name="SimpleCastbar_TLW" clampedToScreen="true" mouseEnabled="true" movable="true">
		
			<Dimensions x="300" y="30" />
			<Anchor point="BOTTOM" relativePoint="BOTTOM" offsetY="-160"/>
			
			<Controls>
			
				<Backdrop name="$(parent)Backdrop" centerColor="FF222222" edgeColor="FF000000">
					
					<AnchorFill/>
					
					<Edge edgeSize="2"/>
				
				</Backdrop>
			
				<StatusBar name="$(parent)Status" color="FFCC7700" orientation="HORIZONTAL">
				
					<Anchor point="TOPLEFT" offsetX="2" offsetY="2"/>
					<Anchor point="BOTTOMRIGHT" offsetX="-2" offsetY="-3"/>
				
				</StatusBar>
				
				<Label name="$(parent)Time" text="0.0s" color="FFFFFFFF" font="$(MEDIUM_FONT)|$(KB_20)|soft-shadow-thin" horizontalAlignment="RIGHT">
				
					<Anchor point="TOPRIGHT" offsetX="-4"/>
					<Anchor point="BOTTOMRIGHT" offsetX="-4"/>
					
					<Dimensions x="50"/>
					
				</Label>
			
				<Texture name="$(parent)Icon" layer="2">
					
					<Anchor point="LEFT" offsetX="4"/>

					<Dimensions x="24" y="24"/>
				
				</Texture>

				<Line name="$(parent)Line" color="FFFF0000" thickness="2.667" layer="2">

					<Anchor point="TOPLEFT" relativeTo="$(parent)Status" offsetX="10"/>
					<Anchor point="BOTTOMLEFT" relativeTo="$(parent)Status" offsetX="10"/>

				</Line>
				
				<Label name="$(parent)Label" text="AbilityName" color="FFFFFFFF" font="$(MEDIUM_FONT)|$(KB_20)|soft-shadow-thin">
					
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="32"/>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)Time" offsetX="-4"/>
					
				</Label>
				
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>